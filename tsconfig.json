{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native", // Add JSX support for React Native
    "esModuleInterop": true // Allow default imports from modules with no default export
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}